<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laboratorio12.Views.CalcularMedidas">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Ingresa el valor de la base"
                   Text="{Binding NumeroBase}"></Entry>
            <Entry Placeholder="Ingresa el valor de la altura"
                   Text="{Binding NumeroAltura}"></Entry>
            <Button Text="Calcular Area"
                    Command="{Binding Area}"></Button>
            <Button Text="Calcular Perimetro"
                    Command="{Binding Perimetro}"></Button>
            <Label FontSize="50"
                   Text="{Binding ResultadoArea}"></Label>
            <Label FontSize="50"
                   Text="{Binding ResultadoPerimetro}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>